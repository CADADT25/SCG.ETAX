@{
    Layout = null;
}

<h2 class="section-title">Email template</h2>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-end align-items-center">
                <a id="btnCallModalCreateProfileEmailTemplate" onclick="callModalInsertProfileEmailTemplate();" data-toggle="modal" data-target="#modalCreateProfileEmailTemplate" class="pointer btn btn-icon icon-left text-white btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
                &nbsp;&nbsp;
                <a id="btnExportData" onclick="ExportProfileEmailTemplate()" class="pointer btn btn-icon icon-left text-white btn-success">
                    <i class="fas fa-file-export"></i> Export (.csv)
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped hover table-hover-animation" id="tbProfileEmailTemplateMain">
                        <thead>
                            <tr>
                                <th class="text-center">PK Key</th>
                                <th class="text-center">No</th>
                                <th>Type No.</th>
                                <th>Subject</th>
                                <th>Email body</th>
                                <th>IsActive</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@await Html.PartialAsync("~/Views/Sidebar/BottomSidebar.cshtml")


