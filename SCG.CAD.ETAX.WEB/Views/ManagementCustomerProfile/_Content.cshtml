@{
    Layout = null;
}

<section id="basic-tabs-components">
    <div class="row match-height">

        <!-- Tabs with Icon starts -->
        <div class="col-xl-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Customer Management</h4>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="Customer-tab" data-toggle="tab" href="#CustomerTab" aria-controls="Customer" role="tab" aria-selected="true">
                                <i class="fas fa-user"></i> Customer 
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" id="Partner-tab" data-toggle="tab" href="#PartnerTab" aria-controls="Partner" role="tab" aria-selected="false">
                                <i class="fas fa-user"></i> Partner 
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content" id="tabCustomer">
                        <div class="tab-pane active" id="CustomerTab" aria-labelledby="Customer-tab" role="tabpanel">
                            @await Html.PartialAsync("~/Views/ProfileCustomer/Index.cshtml")
                        </div>
                        <div class="tab-pane" id="PartnerTab" aria-labelledby="Partner-tab" role="tabpanel">
                            @await Html.PartialAsync("~/Views/ProfilePartner/Index.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Tabs with Icon ends -->
    </div>
</section>