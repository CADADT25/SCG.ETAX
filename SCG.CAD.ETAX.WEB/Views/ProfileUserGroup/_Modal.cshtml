@{
    Layout = null;
}

<script src="~/assets/validate/ProfileUserGroupValidate.js"></script>


<div class="modal fade" tabindex="-1" role="dialog" id="modalCreateProfileUserGroup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create</h5>
                <button type="button" class="close" onclick="fnInsertCancelProfileUserGroup();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                @await Html.PartialAsync("~/Views/ProfileUserGroup/_Create.cshtml")

            </div>
            <div class="modal-footer bg-whitesmoke">
                <button type="button" class="btn btn-secondary" onclick="fnInsertCancelProfileUserGroup();">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnInsertProfileUserGroup();">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" role="dialog" id="modalUpdateProfileUserGroup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update</h5>
                <button type="button" class="close" onclick="fnUpdateCancelProfileUserGroup();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">


                @await Html.PartialAsync("~/Views/ProfileUserGroup/_Update.cshtml")


            </div>
            <div class="modal-footer bg-whitesmoke">
                <button type="button" class="btn btn-secondary" onclick="fnUpdateCancelProfileUserGroup();">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnUpdateProfileUserGroup();">Save changes</button>
            </div>
        </div>
    </div>
</div>
