@{
    Layout = null;
}

<script src="~/assets/validate/ConfigGlobalCategoryValidate.js"></script>


<div class="modal fade" tabindex="-1" role="dialog" id="modalCreateConfigGlobalCategory" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Global Config Category</h5>
                <button type="button" class="close" onclick="fnInsertCancelConfigGlobalCategory();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                @await Html.PartialAsync("~/Views/ConfigGlobalCategory/_Create.cshtml")

            </div>
            <div class="modal-footer bg-whitesmoke br">
                <button type="button" class="btn btn-secondary" onclick="fnInsertCancelConfigGlobalCategory();">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnInsertConfigGlobalCategory();">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" role="dialog" id="modalUpdateConfigGlobalCategory" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Global Config Category</h5>
                <button type="button" class="close" onclick="fnUpdateCancelConfigGlobalCategory();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                @await Html.PartialAsync("~/Views/ConfigGlobalCategory/_Update.cshtml")

            </div>
            <div class="modal-footer bg-whitesmoke br">
                <button type="button" class="btn btn-secondary" onclick="fnUpdateCancelConfigGlobalCategory();">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnUpdateConfigGlobalCategory();">Save changes</button>
            </div>
        </div>
    </div>
</div>
