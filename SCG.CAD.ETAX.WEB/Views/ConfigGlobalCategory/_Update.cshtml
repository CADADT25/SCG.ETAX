<form class="form form-vertical">
    <div class="row">

        <div class="col-12" hidden>
            <div class="form-group">
                <label><spa class="text-danger">* </spa>No</label>
                <input type="text" id="txtUpdateConfigGlobalCategoryNo"  class="form-control">
            </div>
        </div>

        <div class="col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Category name</label>
                <input type="text" id="txtUpdateConfigGlobalCategoryName" disabled style="text-transform: uppercase;" onkeyup="validateUpdateConfigGlobalCategory();" class="form-control">
            </div>
        </div>

        <div class="col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Description</label>
                <input type="text" id="txtUpdateConfigGlobalCategoryDescription" onkeyup="validateUpdateConfigGlobalCategory();" class="form-control">
            </div>
        </div>

        <div class="col-12">
            <div class="form-group">
                <div class="custom-control custom-control-primary custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="toggleUpdateConfigGlobalCategory" checked />
                    <label class="custom-control-label" for="toggleUpdateConfigGlobalCategory">Is Active</label>
                </div>
            </div>
        </div>

    </div>
</form>

