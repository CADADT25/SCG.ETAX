@{
    Layout = null;
}
@model List<SCG.CAD.ETAX.MODEL.etaxModel.RequestCart>


<a class="nav-link" href="javascript:void(0);" data-toggle="dropdown">
    @*<i class="ficon" data-feather="shopping-bag"></i>*@
    <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-bag ficon">
        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <path d="M16 10a4 4 0 0 1-8 0"></path>
    </svg>
    <span class="badge badge-pill badge-danger badge-up">@Model.Count</span>
</a>
<ul class="dropdown-menu dropdown-menu-media dropdown-menu-right">
    <li class="dropdown-menu-header">
        <div class="dropdown-header d-flex">
            <h4 class="notification-title mb-0 mr-auto">My Cart</h4>
            <div class="badge badge-pill badge-light-primary">@Model.Count Items</div>
        </div>
    </li>
    @if (Model.Count > 0)
    {
        <li class="ps-container scrollable-container media-list scroll-area ps ps--active-y">
            @foreach (var item in Model)
            {
                <a class="d-flex" href="javascript:void(0)">
                    <div class="media d-flex align-items-start">
                        <div class="media-body">
                            <p class="media-heading"><span class="font-weight-bolder">Billing no :</span> @item.BillingNumber </p>
                            <small class="notification-text">Company : @item.CompanyCode </small>
                        </div>
                    </div>
                </a>
            }
        </li>

    }
    else
    {
        <li class="scrollable-container media-list">
            <a class="d-flex" href="javascript:void(0)">
                <div class="media d-flex align-items-start">
                    <div class="media-body">
                        <p class="media-heading">No item</p>
                    </div>
                </div>
            </a>
        </li>
    }

    <li class="dropdown-menu-footer"><a class="btn btn-primary btn-block" onclick="fnRenderMyCart()">Manage Cart</a></li>
</ul>
