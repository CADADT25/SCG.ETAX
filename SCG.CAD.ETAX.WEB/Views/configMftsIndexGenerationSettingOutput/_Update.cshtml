<form class="form form-vertical">
    <div class="row">

        <div class="col-md-6 col-12" hidden>
            <div class="form-group">
                <label><spa class="text-danger">* </spa>No</label>
                <input disabled type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputNo" class="form-control">
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Company Code</label>
                <input disabled type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputCompanyCode" class="form-control">
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa> Output Source Name </label>
                <select class="select2 form-control" id="ddlUpdateConfigMftsIndexGenerationSettingOutputOutputSourceName"></select>
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa> Output Type </label>
                <select class="select2 form-control" id="ddlUpdateConfigMftsIndexGenerationSettingOutputType">
                    <option value="sftp">sftp</option>
                    <option value="folder">folder</option>
                </select>
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Output Folder</label>
                @*<input type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputFolder" onclick="fnOpenGetPathServerModal('txtUpdateConfigMftsIndexGenerationSettingOutputFolder')" class="form-control">*@
                <input type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputFolder" class="form-control">
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa> Log Receive Type</label>
                <select class="select2 form-control" id="ddlUpdateConfigMftsIndexGenerationSettingOutputLogReceiveType">
                    <option value="sftp">sftp</option>
                    <option value="folder">folder</option>
                </select>
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Log Receive Folder</label>
                @*<input type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputLogReceiveFolder" onclick="fnOpenGetPathServerModal('txtUpdateConfigMftsIndexGenerationSettingOutputLogReceiveFolder')" class="form-control">*@
                <input type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputLogReceiveFolder" class="form-control">
            </div>
        </div>


        <div class="col-md-3 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Host</label>
                <input type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputHost" class="form-control">
            </div>
        </div>

        <div class="col-md-3 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Port</label>
                <input type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputPort" class="form-control">
            </div>
        </div>

        <div class="col-md-3 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Username</label>
                <input type="text" id="txtUpdateConfigMftsIndexGenerationSettingOutputUsername" class="form-control">
            </div>
        </div>

        <div class="col-md-3 col-12">
            <div class="form-group">
                <label><spa class="text-danger">* </spa>Password</label>
                <input type="password" id="txtUpdateConfigMftsIndexGenerationSettingOutputPassword" class="form-control">
            </div>
        </div>


        <div class="col-md-12 col-12">
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" checked class="custom-control-input" id="toggleUpdateConfigMftsIndexGenerationSettingOutputIsActive" />
                    <label class="custom-control-label" for="toggleUpdateConfigMftsIndexGenerationSettingOutputIsActive">Is Active</label>
                </div>
            </div>
        </div>

    </div>
</form>