
<script src="~/assets/validate/ProfileCompanyValidate.js"></script>


<div class="row">
    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Company Code</label>
            <input type="text" pattern="[0-9]" maxlength="4" id="txtInsertProfileCompanyCode" onkeyup="validateInsertProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Tax no.</label>
            <input type="number" id="txtInsertProfileCompanyTaxNumber" onkeyup="validateInsertProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Name TH</label>
            <input type="text" id="txtInsertProfileCompanyNameTh" onkeyup="validateInsertProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Name EN</label>
            <input type="text" id="txtInsertProfileCompanyNameEn" onkeyup="validateInsertProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-12 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Certificate no.</label>
            <select disabled class="select2 form-control" id="ddlInsertProfileCompanyCertificate"></select>
        </div>
    </div>
    
    <div class="col-md-6 col-12">
        <div class="form-group">

            <div class="custom-control custom-control-primary custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="toggleInsertProfileCompanyEbill" checked />
                <label class="custom-control-label" for="toggleInsertProfileCompanyEbill">Is e-Bill</label>
            </div>

            @*<div class="control-label">Toggle switch Is e-Bill</div>
            <input id="toggleInsertProfileCompanyEbill" checked type="checkbox" data-toggle="toggle">
            <div hidden id="toggleInsertProfileCompanyEbill-event"></div>*@
        </div>
    </div>

    <div class="col-md-6 col-12">
        <div class="form-group">
            <div class="custom-control custom-control-primary custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="toggleInsertProfileCompanyIsActive" checked />
                <label class="custom-control-label" for="toggleInsertProfileCompanyIsActive">Is Active</label>
            </div>
@*
            <div class="control-label">Toggle switch IsActive</div>
            <input id="toggleInsertProfileCompanyIsActive" checked type="checkbox" data-toggle="toggle">
            <div hidden id="toggleInsertProfileCompanyIsActive-event"></div>*@
        </div>
    </div>




    <hr>

    <div class="col-12 pull-right" id="actionSaveCompanyProfile">
        <button type="button" class="btn btn-secondary" onclick="fnInsertCancelProfileCompany();">Reset</button>
        <button type="button" class="btn btn-primary" onclick="fnInsertProfileCompany();">Save changes</button>
    </div>
</div>
