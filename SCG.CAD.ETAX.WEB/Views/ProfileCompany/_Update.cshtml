
<script src="~/assets/validate/ProfileCompanyValidate.js"></script>


<div class="row">

    <div class="col-col-md-6 col-12">
        <div class="form-group" hidden>
            <label>No</label>
            <input disabled type="text" id="txtUpdateProfileCompanyNo" class="form-control">
        </div>
    </div>

    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Company Code</label>
            <input disabled type="text" pattern="[0-9]" maxlength="4" id="txtUpdateProfileCompanyCode" onkeyup="validateUpdateProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Tax no.</label>
            <input disabled type="number" id="txtUpdateProfileCompanyTaxNumber" onkeyup="validateUpdateProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Name TH</label>
            <input type="text" id="txtUpdateProfileCompanyNameTh" onkeyup="validateUpdateProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Name EN</label>
            <input type="text" id="txtUpdateProfileCompanyNameEn" onkeyup="validateUpdateProfileCompany()" class="form-control">
        </div>
    </div>
    <div class="col-md-12 col-12">
        <div class="form-group">
            <label><spa class="text-danger">* </spa>Certificate no.</label>
            <select class="select2 form-control" id="ddlUpdateProfileCompanyCertificate"></select>
        </div>
    </div>

    <div class="col-md-6 col-12">
        <div class="form-group">
            <div class="custom-control custom-control-primary custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="toggleUpdateProfileCompanyEbill" checked />
                <label class="custom-control-label" for="toggleUpdateProfileCompanyEbill">Is e-Bill</label>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-12">
        <div class="form-group">
            <div class="custom-control custom-control-primary custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="toggleUpdateProfileCompanyIsActive" checked />
                <label class="custom-control-label" for="toggleUpdateProfileCompanyIsActive">Is Active</label>
            </div>
        </div>
    </div>

    <hr>

    <div class="col-12 pull-right" id="actionSaveCompanyProfile">
        <button type="button" class="btn btn-secondary" onclick="fnUpdateCancelProfileCompany();">Reset</button>
        <button type="button" class="btn btn-primary" onclick="fnUpdateProfileCompany();">Save changes</button>
    </div>
</div>
