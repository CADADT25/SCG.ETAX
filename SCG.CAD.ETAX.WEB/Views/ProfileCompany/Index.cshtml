    function callProfileCompanyGetDetailController(getPK){
        $.ajax({
            type: "GET",
            url: "@Url.Action("Detail", "ProfileCompany")",
            data: { id : getPK },
            dataType: "json",
            success: function (result) {

                data = $.parseJSON(result)

                document.getElementById('txtUpdateProfileCompanyNo').value = data.CompanyNo;
                document.getElementById('txtUpdateProfileCompanyCode').value = data.CompanyCode;
                document.getElementById('txtUpdateProfileCompanyNameTh').value = data.CompanyNameTh;
                document.getElementById('txtUpdateProfileCompanyNameEn').value = data.CompanyNameEn;

                $("#ddlUpdateProfileCompanyCertificate").select2("val", data.CertificateProfileNo);

                document.getElementById('txtUpdateProfileCompanyTaxNumber').value = data.TaxNumber;



                if(data.IsEbill == 1){
                    document.getElementById("toggleUpdateProfileCompanyEbill").checked = true;
                }
                else{
                    document.getElementById("toggleUpdateProfileCompanyEbill").checked = false;
                }

                if(data.Isactive == 1){
                    document.getElementById("toggleUpdateProfileCompanyIsActive").checked = true;
                }
                else{
                    document.getElementById("toggleUpdateProfileCompanyIsActive").checked = false;
                }

                

                $("#modalUpdateProfileCompany").modal('show');

            }
        });
    }

