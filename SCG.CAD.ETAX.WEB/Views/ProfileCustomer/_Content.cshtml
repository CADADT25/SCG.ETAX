@{
    Layout = null;
}
@if (ViewBag.showVIEW == true)
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-end align-items-center">
                    @if (ViewBag.showCREATE == true)
                    {
                        <a id="btnCallModalCreateProfileCustomer" onclick="callModalInsertProfileCustomer();" class="pointer btn btn-icon icon-left text-white btn-primary">
                            <i class="fas fa-plus"></i> Create New
                        </a>
                    }
                    &nbsp;&nbsp;
                    @if (ViewBag.showEXPORT == true)
                    {
                        <a id="btnExportProfileCustomer" onclick="ExportProfileCustomer()" class="pointer btn btn-icon icon-left text-white btn-success">
                            <i class="fas fa-file-export"></i> Export (.csv)
                        </a>
                    }
                    &nbsp;&nbsp;
                    @if (ViewBag.showIMPORT == true)
                    {
                        <input type="file" id="inputFileImportCustomer" accept=".xls,.xlsx,.csv" style="display:none;" />
                        <a id="btnImportCustomer" onclick="ImportProfileCustomer()" class="pointer btn btn-icon icon-left text-white btn-warning">
                            <i class="fas fa-file-import"></i> Import (.xlsx,.csv)
                        </a>
                    }
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-hover-animation" id="tbProfileCustomerMain">
                            <thead>
                                <tr>
                                    <th class="text-center">PK Key</th>
                                    <th class="text-center">No</th>
                                    <th>Customer Code</th>
                                    <th>Company Code</th>
                                    <th>Output Type</th>
                                    <th>No of copies</th>
                                    <th>Email Type</th>
                                    <th>IsActive</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

