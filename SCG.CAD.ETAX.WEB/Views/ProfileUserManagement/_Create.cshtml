@{
    Layout = null;
}

<div class="content-header row">
    <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">Form Layouts</h2>
                <div class="breadcrumb-wrapper">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a id="UserProfileBack" onclick="callProfileUserManagementIndex();">User Profile</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="javascript:void(0);"><label id="UserProfileEmail"></label></a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a id="UserProfileEdit" href="javascript:void(0);">Edit profile</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="app-user-edit">
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-pills" role="tablist">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center active" id="account-tab" data-toggle="tab" href="#account" aria-controls="account" role="tab" aria-selected="true">
                        <i class="fas fa-user"></i>
                        <span class="d-none d-sm-block">Account</span>
                    </a>
                </li>

            </ul>
            <div class="tab-content">
                <!-- Account Tab starts -->
                <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">

                    <!-- users edit account form start -->
                    <form class="form-validate">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="username">Email</label>
                                    <input type="email" class="form-control" id="txtInsertProfileUserManagementEmail" value="" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="txtInsertProfileUserManagementName">Name</label>
                                    <input type="text" class="form-control" id="txtInsertProfileUserManagementName" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="txtInsertProfileUserManagementLastName">Last name</label>
                                    <input type="text" class="form-control" id="txtInsertProfileUserManagementLastName"  />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="txtInsertProfileUserManagementPassword">Password</label>
                                    <input type="password" class="form-control" id="txtInsertProfileUserManagementPassword" value=""  />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="txtInsertProfileUserManagementComfirmPassword">Comfirm Password</label>
                                    <input type="password" class="form-control" id="txtInsertProfileUserManagementComfirmPassword" value=""  />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="role">Role Group</label>
                                    <select class="select2 form-control" id="ddlInsertRoleGroup"></select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="status">Status</label>
                                    <select class="form-control" id="status">
                                        <option value="1">Active</option>
                                        <option value="0">Blocked</option>
                                        <option value="0">Deactivated</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 d-flex flex-sm-row flex-column mt-2">
                                <button type="submit" class="btn btn-primary mb-1 mb-sm-0 mr-0 mr-sm-1">Save Changes</button>
                            </div>
                        </div>
                    </form>
                    <!-- users edit account form ends -->
                </div>
            </div>
        </div>
    </div>
</section>