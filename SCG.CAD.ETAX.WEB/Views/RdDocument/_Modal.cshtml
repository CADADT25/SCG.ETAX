@{
    ViewData["Title"] = "Revenue Document";
    Layout = null;
}

<script type="text/javascript">
        function isKeyEN(keyCode) {
        return ((keyCode >= 58 && keyCode <= 122) || keyCode == 8 || keyCode == 13 || keyCode == 46)
    }
    function isKeyTH(keyCode) {
        return ((keyCode >= 161) || keyCode == 8 || keyCode == 13 || keyCode == 46)
    }
    function isKeyNum(keyCode) {
        return ((keyCode >= 48 && keyCode <= 57) || keyCode == 8 || keyCode == 13 || keyCode == 46)
    }
</script>

@* [Begin] Modal Create *@
<div class="modal fade" tabindex="-1" role="dialog" id="modalCreateRdDocument" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create @ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label><spa class="text-danger">* </spa>Document Code</label>
                                    <input type="text" id="txtInsertRdDocumentCode" onkeyup="validateRdDocument();" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label><spa class="text-danger">* </spa>Name (TH)</label>
                                    <input type="text" id="txtInsertRdDocumentNameTH" onkeyup="validateRdDocument();" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label>Name (EN)</label>
                                    <input type="text" id="txtInsertRdDocumentNameEN" onkeyup="validateRdDocument();" class="form-control">
                                </div>

                                <div class="form-group">
                                    <div class="control-label">Toggle switch IsActive</div>
                                    <input id="toggleInsertRdDocument" checked type="checkbox" data-toggle="toggle">
                                    <div id="toggleInsertRdDocument-event"></div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-whitesmoke br">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnInsertRdDocument();">Save changes</button>
            </div>
        </div>
    </div>
</div>

@* [End] Modal Create *@


<div class="modal fade" tabindex="-1" role="dialog" id="modalUpdateRdDocument" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create @ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group" hidden>
                                    <label>No</label>
                                    <input disabled type="text" id="txtUpdateRdDocumentNo" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label><spa class="text-danger">* </spa>Document Code</label>
                                    <input disabled type="text" id="txtUpdateRdDocumentCode" onkeyup="validateRdDocument();" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label><spa class="text-danger">* </spa>Name (TH)</label>
                                    <input type="text" id="txtUpdateRdDocumentNameTH" onkeyup="validateRdDocument();" onkeypress="return isKeyTH(event.keyCode);" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label>Name (EN)</label>
                                    <input type="text" id="txtUpdateRdDocumentNameEN" onkeyup="validateRdDocument();" onkeypress="return isKeyEN(event.keyCode);" class="form-control">
                                </div>


                                <div class="form-group">
                                    <div class="control-label">Toggle switch IsActive</div>
                                    <input id="toggleUpdateRdDocument" type="checkbox" data-toggle="toggle">
                                    <div hidden id="toggleUpdateRdDocument-event"></div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-whitesmoke br">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnUpdateRdDocument();">Save changes</button>
            </div>
        </div>
    </div>
</div>
