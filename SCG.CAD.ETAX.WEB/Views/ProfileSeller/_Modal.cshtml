@{
    ViewData["Title"] = "Company Address";
    Layout = null;
}

<script src="~/assets/validate/ProfileSellerValidate.js"></script>


@* [Begin] Modal Create *@
<div class="modal fade" role="dialog" id="modalCreateProfileSeller" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create @ViewData["Title"]</h5>
                <button type="button" class="close" onclick="fnInsertCancelProfileSeller();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("~/Views/ProfileSeller/_Create.cshtml")
            </div>
            <div class="modal-footer bg-whitesmoke br">
                <button type="button" class="btn btn-secondary" onclick="fnInsertCancelProfileSeller()" >Close</button>
                <button type="button" class="btn btn-primary" onclick="fnInsertProfileSeller();">Save changes</button>
            </div>
        </div>
    </div>
</div>

@* [End] Modal Create *@


<div class="modal fade" role="dialog" id="modalUpdateProfileSeller" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update @ViewData["Title"]</h5>
               <button type="button" class="close" onclick="fnUpdateCancelProfileSeller()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("~/Views/ProfileSeller/_Update.cshtml")
            </div>
            <div class="modal-footer bg-whitesmoke br">
                <button type="button" class="btn btn-secondary" onclick="fnUpdateCancelProfileSeller()">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnUpdateProfileSeller();">Save changes</button>
            </div>
        </div>
    </div>
</div>
