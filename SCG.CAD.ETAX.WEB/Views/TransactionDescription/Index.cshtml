                    render: function (data, type, row) {
                        return (data == "Successful") ? '<i class="text-success fas fa-paper-plane" />' : 
                        data == "Failed" ? '<i class="text-danger fas fa-circle-exclamation"/>' : '<i class="text-warning fas fa-clock" />';
                    }
