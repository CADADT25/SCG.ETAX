@{
    Layout = null;
}

<script src="~/assets/validate/ConfigControlMenuValidate.js"></script>


<div class="modal fade" tabindex="-1" role="dialog" id="modalCreateConfigControlMenu" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create</h5>
                <button type="button" class="close" onclick="fnInsertCancelConfigControlMenu();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                @await Html.PartialAsync("~/Views/ConfigControlMenu/_Create.cshtml")

            </div>
            <div class="modal-footer bg-whitesmoke">
                <button type="button" class="btn btn-secondary" onclick="fnInsertCancelConfigControlMenu();">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnInsertConfigControlMenu();">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" role="dialog" id="modalUpdateConfigControlMenu" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update</h5>
                <button type="button" class="close" onclick="fnUpdateCancelConfigControlMenu();" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">


                @await Html.PartialAsync("~/Views/ConfigControlMenu/_Update.cshtml")


            </div>
            <div class="modal-footer bg-whitesmoke">
                <button type="button" class="btn btn-secondary" onclick="fnUpdateCancelConfigControlMenu();">Close</button>
                <button type="button" class="btn btn-primary" onclick="fnUpdateConfigControlMenu();">Save changes</button>
            </div>
        </div>
    </div>
</div>
